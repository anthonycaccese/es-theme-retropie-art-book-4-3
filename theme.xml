<theme>
   <formatVersion>4</formatVersion>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="background" extra="true">
         <tile>true</tile>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/space.png</path>
         <color>141414</color>
      </image>
   </view>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>141414</color>
         </carousel>
         <text name="systemInfo">
            <backgroundColor>141414</backgroundColor>
            <color>666666</color>
            <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.0222222222222222</fontSize>
         </text>
         <image name="system-border" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.62</pos>
            <size>0.25 0.0027777777777778</size>
            <path>./_inc/images/space.png</path>
            <color>444444</color>
         </image>
         <text name="logoText">
            <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
            <color>cccccc</color>
            <forceUppercase>true</forceUppercase>
         </text>
      </view>
   </feature>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0 0.5</origin>
         <maxSize>0.125 0.041666666666667</maxSize>
         <color>ffffff44</color>
      </image>
      <text name="logoText">
         <size>0.125 0.041666666666667</size>
         <fontSize>0.022222222222222</fontSize>
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <forceUppercase>true</forceUppercase>
         <color>555555</color>
         <alignment>left</alignment>
      </text>
      <textlist name="gamelist">
         <selectorColor>333333ff</selectorColor>
         <selectedColor>cccccc</selectedColor>
         <primaryColor>cccccc</primaryColor>
         <secondaryColor>cccccc</secondaryColor>
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <fontSize>0.030555555555556</fontSize>
         <forceUppercase>1</forceUppercase>
         <alignment>center</alignment>
         <lineSpacing>1.6</lineSpacing>
      </textlist>
      <image name="help-random" extra="true">
         <path>./_inc/images/help-random.svg</path>
         <size>0.103125 0.0263888888888889</size>
      </image>
      <image name="help-launch" extra="true">
         <path>./_inc/images/help-launch.svg</path>
         <size>0.095833333333333 0.0263888888888889</size>
      </image>
      <image name="help-favorite" extra="true">
         <path>./_inc/images/help-favorite.svg</path>
         <size>0.107291666666667 0.0263888888888889</size>
      </image>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0</origin>
         <pos>.5 0.1527777777777778</pos>
      </image>
      <text name="logoText">
         <pos>0.4375 0.1527777777777778</pos>
         <alignment>center</alignment>
      </text>
      <textlist name="gamelist">
         <pos>0.1875 0.2416666666666667</pos>
         <size>0.625 0.5555555555555556</size>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>
      </textlist>
      <image name="help-launch" extra="true">
         <origin>0 0</origin>
         <pos>0.33125 0.8333333333333333</pos>
      </image>
      <image name="help-random" extra="true">
         <origin>0 0</origin>
         <pos>0.442708333333333 0.8333333333333333</pos>
      </image>
      <image name="help-favorite" extra="true">
         <origin>0 0</origin>
         <pos>0.565625 0.8333333333333333</pos>
      </image>
   </view>

   <view name="detailed,video">

      <image name="title-bar" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 0.083333333333333</size>
         <path>./_inc/images/space.png</path>
         <color>141414</color>
      </image>
      <image name="logo">
         <pos>0.020833333333333 0.041666666666667</pos>
      </image>
      <text name="logoText">
         <pos>0.020833333333333 0.020833333333333</pos>
      </text>
      <textlist name="gamelist">
         <pos>0.1875 0.020833333333333</pos>
         <size>0.625 0.033333333333333</size>
         <lineSpacing>1</lineSpacing>
         <selectorColor>33333300</selectorColor>
      </textlist>
      <image name="help-random" extra="true">
         <origin>1 0.5</origin>
         <pos>0.979166666666667 0.041666666666667</pos>
      </image>
      
      <image name="md_image">
         <origin>0.5 0</origin>
         <pos>0.3 0.1625</pos>
         <maxSize>0.410416666666667 0.547222222222222</maxSize>
      </image>

      <image name="background" extra="true">
         <color>cccccc</color>
      </image>
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount">
         <pos>1 1</pos>
      </text>
      <text name="md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description">
         <color>111111</color>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.0194444444444444</fontSize>
      </text>
      <datetime name="md_lastplayed,md_releasedate">
         <color>111111</color>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.0194444444444444</fontSize>
      </datetime>

      <rating name="md_rating">
         <pos>0.55 0.173611111111111</pos>
         <size>0.239583333333333 0.0277777777777778</size>
      </rating>
      <text name="md_lbl_lastplayed">
         <pos>0.55 0.229166666666667</pos>
         <size>0.127083333333333 0.0222222222222222</size>
         <forceUppercase>1</forceUppercase>
      </text>
      <datetime name="md_lastplayed">
         <pos>0.6625 0.229166666666667</pos>
         <size>0.09375 0.0222222222222222</size>
      </datetime>
      <text name="md_lbl_players">
         <pos>0.55 0.284722222222222</pos>
         <size>0.127083333333333 0.0222222222222222</size>
         <forceUppercase>1</forceUppercase>
      </text>
      <text name="md_players">
         <pos>0.6625 0.284722222222222</pos>
         <size>0.09375 0.0222222222222222</size>
      </text>
      <text name="md_lbl_releasedate">
         <pos>0.55 0.256944444444444</pos>
         <size>0.127083333333333 0.0222222222222222</size>
         <forceUppercase>1</forceUppercase>
      </text>
      <datetime name="md_releasedate">
         <pos>0.6625 0.256944444444444</pos>
         <size>0.09375 0.0222222222222222</size>
      </datetime>
      <text name="md_lbl_genre">
         <pos>0.55 0.3125</pos>
         <size>0.127083333333333 0.0222222222222222</size>
