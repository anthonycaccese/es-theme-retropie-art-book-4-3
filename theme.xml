      </text>
      <text name="md_genre">
         <pos>0.6625 0.3125</pos>
         <size>0.09375 0.0222222222222222</size>
      </text>

      <image name="help-launch" extra="true">
         <pos>0.55 0.506944444444444</pos>
         <origin>0 0</origin>
      </image>
      <image name="help-favorite" extra="true">
         <pos>0.660416666666667 0.506944444444444</pos>
         <origin>0 0</origin>
      </image>
      <image name="md-description-border" extra="true">
         <pos>0.095833333333333 0.770833333333333</pos>
         <size>0.410416666666667 0.0027777777777778</size>
         <origin>0 0</origin>
         <path>./_inc/images/space.png</path>
         <color>aaaaaa</color>
      </image>
      <text name="md_description">
         <pos>0.095833333333333 0.790277777777778</pos>
         <size>.410416666666667 0.1180555555555556</size>
      </text>
      
   </view>

   <view name="video">
      <image name="md_marquee">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="video-background" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.740277777777778</pos>
         <size>0.341666666666667248 0.344444444444444</size>
         <path>./_inc/images/space.png</path>
         <color>bbbbbb</color>
      </image>
      <image name="video-screen" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.740277777777778</pos>
         <maxSize>0.333333333333333 0.3333333333333333</maxSize>
         <path>./_inc/images/space.png</path>
         <color>000000</color>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.720833333333333 0.740277777777778</pos>
         <maxSize>0.333333333333333 0.3333333333333333</maxSize>
         <delay>0</delay>
         <default>./_inc/videos/static.mp4</default>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
   </view>

   <feature supported="z-index">
      <view name="system,basic,detailed,video">
         <image name="background" extra="true">
            <zIndex>1</zIndex>
         </image>
      </view>
      <view name="system">
         <image name="system-border" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="detailed,video">
         <image name="help-launch" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="help-favorite" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="md-description-border" extra="true">
            <zIndex>100</zIndex>
         </image>
         <text name="logoText">
            <zIndex>200</zIndex>
         </text>
         <image name="help-random" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="video-background" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="video-screen" extra="true">
            <zIndex>105</zIndex>
         </image>
         <video name="md_video">
            <zIndex>110</zIndex>
         </video>
      </view>
   </feature>

</theme>
